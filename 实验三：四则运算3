using namespace std;

void proNum(int &ProNum)//确定题目数量
{
	cout<<"请输入运算式的数量： ";
	cin>>ProNum;
	if(ProNum<1)
	{
		cout<<"输入错误,";
		proNum(ProNum);
	}
}

