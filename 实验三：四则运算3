										break;
									case '-':
										if(isNeg==2)
										{
											Neg(operand[op-2][0],number[i][t],RangeNum);
											operand[op-1][0]=number[i][t];
										}
										operand[op-2][0]=operand[op-2][0]-operand[op-1][0];
										break;
									default:
										break;
									}
								    m=m-1; 
									op--;
									t++;
								}
								else
								{
									m++;
									t++;
								}
							}
							else
							{
								m++;
								t++;
							}
						}
						else if(operation[m]==')')
						{
							operation[m-2]=operation[m-1];
							m=m-1; 
							if(op>1)
							{
								if(operation[m-3]=='n')
								{
									switch(operation[m-2])
									{
									case '+':
										operand[op-2][0]=operand[op-2][0]+operand[op-1][0];
										break;
									case '-':
										operand[op-2][0]=operand[op-2][0]-operand[op-1][0];
										if(isNeg==2)
										{
											if(operand[op-2][0]<0)
